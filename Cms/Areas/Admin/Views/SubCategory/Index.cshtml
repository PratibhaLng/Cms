@model IEnumerable<Data.Models.SubCategory>
@{
    ViewData["Title"] = "Index";
}




<div class="container p-3">
    <div class=" row pt-4">
        <div class="col-6">
            <h2 class="text-primary">SubCategory List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="SubCategory" asp-action="Create"  class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create SubCategory
            </a>
        </div>
    </div>
    <br />
    <br />
    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-striped" style="width:100% ">
            <thead>
                <tr>

                    <th>SubCategoryId</th>
                    <th>Name</th>
                    <th>Category</th>
                    
                    <th>Created Date</th>
                    <th>Created By</th>
                    <th>Updated Date</th>
                    <th>Updated By</th>

                </tr>
            </thead>

            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="30%">@obj.Id </td>
                        <td width="30%">@obj.Name </td>
                        
                        <td>
                            @Html.DisplayFor(modelItem => obj.Category.Name)
                           
                        </td>

                        <td width="30%">@obj.CreatedDate </td>
                        <td width="30%">@obj.CreatedBy </td>
                        <td width="30%">@obj.UpdatedDate </td>
                        <td width="30%">@obj.UpdatedBy </td>


                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="SubCategory" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i>&nbsp;Edit
                                </a>
                            </div>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="SubCategory" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-x-square"></i>&nbsp;Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {


        <p>No SubCategory Found!!</p>


    }
</div>


@model IEnumerable<Data.Models.Category>
@{
    ViewData["Title"] = "Index";
}



<div class="container p-3">
    <div class=" row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
        </a>
    </div>
    </div>
    <br />
    <br />
    @if (Model != null && Model.Any())
    {
    <table class="table table-bordered table-striped" style="width:100% ">
        <thead>
            <tr>
             
                <th>CategoryId</th>
                    <th>Name</th>
                <th>Created Date</th>
                <th>Created By</th>
                <th>Updated Date</th>
                <th>Updated By</th>

            </tr>
        </thead>
        
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                        <td width="30%">@obj.Id </td>
                    <td width="30%">@obj.Name </td>
                   
                    <td width="30%">@obj.CreatedDate </td>
                    <td width="30%">@obj.CreatedBy </td>
                    <td width="30%">@obj.UpdatedDate </td>
                    <td width="30%">@obj.UpdatedBy </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="Category" asp-action="GetDetails"  class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i>&nbsp;Details
                                </a>
                            </div>
                    <td>
                    <div class="btn-group" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                           <i class="bi bi-pencil-square"></i>&nbsp;Edit</a>
                       </div>
                    </td>
                    <td>
                       <div class="btn-group" role="group">
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                           <i class="bi bi-x-square"></i>&nbsp;Delete</a>
                       </div>
                </tr>
            }
        </tbody>
    </table>
    }
    else
    {


        <p>No Category Found!!</p>


    }
</div>

@model Data.Models.Product
@{
    ViewData["Title"] = "Delete";
}
<form method="post" asp-action="DeletePOST">
    <input hidden asp-for="Id" />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Product </h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Id"></label>
            <input asp-for="Id" disabled class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />



        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" disabled class="form-control" /></div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="SubCategory.Name"></label>
            <input asp-for="SubCategory.Name" disabled class="form-control" />
        </div>

        
        <button type="submit" class="btn btn-danger" style="width:150px;">Delete </button>
    </div>

</form>